<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.megacity.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>com.megacity.controller.SignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServletAdmin</servlet-name>
        <servlet-class>com.megacity.controller.LoginServletAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteAdminServlet</servlet-name>
        <servlet-class>com.megacity.controller.superAdmin.deleteAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>changeAddminDataServlet</servlet-name>
        <servlet-class>com.megacity.controller.superAdmin.changeAddminDataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookingServlet</servlet-name>
        <servlet-class>com.megacity.controller.customer.showBookingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addVehicleServlet</servlet-name>
        <servlet-class>com.megacity.controller.customer.addVehicleServlet</servlet-class>
         <multipart-config>
        <max-file-size>10485760</max-file-size> <!-- Max file size 10 MB -->
        <max-request-size>20971520</max-request-size> <!-- Max request size 20 MB -->
        <file-size-threshold>0</file-size-threshold> <!-- File is written to disk immediately -->
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/SignupServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServletAdmin</servlet-name>
        <url-pattern>/LoginServletAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteAdminServlet</servlet-name>
        <url-pattern>/deleteAdminServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>changeAddminDataServlet</servlet-name>
        <url-pattern>/changeAddminDataServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookingServlet</servlet-name>
        <url-pattern>/BookingServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addVehicleServlet</servlet-name>
        <url-pattern>/addVehicleServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
